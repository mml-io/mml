{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES6",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "types": [
      "node",
    ],
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "./build",
    "incremental": true
  },
  "include": [
    "utils/**/*"
  ],
  "exclude": ["**/build/*", "types-src"]
}
