{
  "name": "mml",
  "type": "module",
  "packageManager": "npm@10.0.0",
  "scripts": {
    "preinstall": "node ./check-node-version.js",
    "serve": "turbo run serve --output-logs=full --concurrency=5 --continue",
    "build": "turbo run build --output-logs=full",
    "start": "npm run iterate",
    "iterate": "npm run build && npm run iterate-without-build",
    "iterate-without-build": "turbo run iterate --output-logs=full --concurrency=1000 --continue",
    "test-all": "turbo run test --output-logs=full --concurrency=5 --continue",
    "lint-all": "turbo run lint --output-logs=full --concurrency=5 --continue",
    "lint-fix-all": "turbo run lint-fix --output-logs=full --concurrency=5 --continue",
    "type-check-all": "turbo run type-check --output-logs=full --concurrency=5 --continue",
    "check": "npm run build && npm run type-check-all && npm run lint-all",
    "link-all": "lerna exec \"npm link\" --no-private && npm run print-links",
    "print-links": "echo \"Run this command in the package you would like to link this repo's packages to:\n\"; echo \"npm link\" $(lerna ls --loglevel=error)",
    "version": "lerna version --no-push --force-publish",
    "ci:e2e-tests": "turbo run ci:e2e-tests --output-logs=full",
    "ci:e2e-tests:threejs": "turbo run ci:e2e-tests:threejs --output-logs=full",
    "ci:e2e-tests:playcanvas": "turbo run ci:e2e-tests:playcanvas --output-logs=full",
    "ci:e2e-tests:threejs:shard": "turbo run ci:e2e-tests:threejs:shard --output-logs=full",
    "ci:e2e-tests:playcanvas:shard": "turbo run ci:e2e-tests:playcanvas:shard --output-logs=full",
    "e2e-tests": "turbo run e2e-tests --output-logs=full",
    "e2e-tests:threejs": "turbo run e2e-tests:threejs --output-logs=full",
    "e2e-tests:playcanvas": "turbo run e2e-tests:playcanvas --output-logs=full"
  },
  "workspaces": [
    "packages/**/*",
    "examples/**/*",
    "e2e-tests",
    "integration-tests/**/*",
    "github-pages-publisher"
  ],
  "devDependencies": {
    "@types/jest": "29.5.13",
    "@babel/preset-typescript": "7.27.1",
    "@eslint/js": "9.31.0",
    "@swc/core": "1.12.14",
    "@swc/jest": "0.2.39",
    "@types/jju": "1.4.5",
    "@types/node": "24.0.13",
    "@types/resolve": "1.20.6",
    "@types/tmp": "0.2.6",
    "concurrently": "9.2.0",
    "cross-env": "7.0.3",
    "esbuild": "0.25.6",
    "esbuild-jest": "0.5.0",
    "esbuild-plugin-copy": "2.1.1",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jest": "29.7.0",
    "jju": "1.4.0",
    "lerna": "8.2.3",
    "prettier": "3.6.2",
    "publish-if-not-exists": "1.1.0",
    "resolve": "1.22.10",
    "tmp": "0.2.3",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "turbo": "2.5.0",
    "typescript": "5.5.4",
    "tsx": "4.20.3",
    "typescript-eslint": "8.36.0"
  },
  "optionalDependencies": {
    "@nrwl/nx-linux-x64-gnu": "15.9.3"
  }
}
