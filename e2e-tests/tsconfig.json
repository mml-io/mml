{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ES6",
    "jsx": "react",
    "lib": ["es2020"],
    "allowJs": true,
    "types": ["node", "jest", "./jest-setup"],
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "./build",
    "incremental": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["**/build/*"]
}
