    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test-iterate": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "dependencies": {
    "@mml-io/networked-dom-web-runner": "^0.6.2",
    "@mml-io/observable-dom-common": "^0.6.2"
