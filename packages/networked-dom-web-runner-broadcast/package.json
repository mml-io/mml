{
  "name": "@mml-io/networked-dom-web-runner-broadcast",
  "version": "0.6.2",
  "publishConfig": {
    "access": "public"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "type": "module",
  "files": [
    "/build"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsx ./build.ts --build",
