{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "serve": {
      "cache": false,
      "persistent": true
    },
    "iterate": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": true,
      "outputs": ["coverage/**"]
    },
    "lint": {
      "cache": true
    },
    "lint-fix": {
      "cache": true
    },
    "type-check": {
      "cache": true
    }
  }
}

