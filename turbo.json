{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "serve": {
      "cache": false,
      "persistent": true
    },
    "iterate": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": true,
      "outputs": ["coverage/**"]
    },
    "lint": {
      "cache": true
    },
    "lint-fix": {
      "cache": true
    },
    "type-check": {
      "cache": true
    },
    "e2e-tests": {
      "cache": true,
      "outputs": ["test/__image_snapshots__/__diff_output__/**"]
    },
    "e2e-tests:threejs": {
      "cache": true,
      "outputs": ["test/__image_snapshots__/__diff_output__/**"]
    },
    "e2e-tests:playcanvas": {
      "cache": true,
      "outputs": ["test/__image_snapshots__/__diff_output__/**"]
    },
    "ci:e2e-tests": {
      "cache": true,
      "outputs": ["test/__image_snapshots__/__diff_output__/**"]
    },
    "ci:e2e-tests:threejs": {
      "cache": true,
      "outputs": ["test/__image_snapshots__/__diff_output__/**"]
    },
    "ci:e2e-tests:playcanvas": {
      "cache": true,
      "outputs": ["test/__image_snapshots__/__diff_output__/**"]
    },
    "ci:e2e-tests:threejs:shard": {
      "cache": true,
      "outputs": ["test/__image_snapshots__/__diff_output__/**"]
    },
    "ci:e2e-tests:playcanvas:shard": {
      "cache": true,
      "outputs": ["test/__image_snapshots__/__diff_output__/**"]
    }
  }
}

