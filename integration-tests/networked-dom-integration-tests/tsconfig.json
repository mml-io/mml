{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES6",
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "types": ["node", "vitest/globals"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "./build",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "scripts/**/*", "./build.ts", "./vitest.config.ts"],
  "exclude": ["**/build/*", "types-src"]
}
